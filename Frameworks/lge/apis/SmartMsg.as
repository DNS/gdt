/**
 * Smart Text Message Type
 */
class lge.apis.SmartMsg
{
	/** Send string and caret position to a smart phone */
	public static var NOTI:Number = 0;

	/** Activate the virtual keyboard on a smart phone */
	public static var SHOW:Number = 1;

	/** Deactivate the virtual keyboard on a smart phone */
	public static var HIDE:Number = 2; 

	/** Last */  
	public static var LAST:Number = 3;
}